# PATH, MANPATH, INFOPATH
append_to_env() {
    if [[ $# -lt 2 ]]; then
        echo "Usage: append_to_env <env> <dir>"
        echo "e.g. append_to_env PATH /path/to/dir" 
        return 1
    fi

    local env=$1
    local dir=$2

    if [[ :${(P)env}: != *:$dir:* ]]; then
    
        if [[ -n ${(P)env} ]]; then
            export $env=${(P)env}:$dir
        else
            export $env=$dir
        fi
    fi
}

