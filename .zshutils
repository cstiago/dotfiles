# PATH, MANPATH, INFOPATH
append_to_env() {
    if [[ $# -lt 2 ]]; then
        FUNC=${funcstack[1]}

        echo "Usage: $FUNC <env> <dir>"
        echo "e.g. $FUNC PATH /path/to/dir"

        return 1
    fi

    ENV=$1
    DIR=$2

    if [[ :${(P)ENV}: != *:$DIR:* ]]; then
        if [[ -n ${(P)ENV} ]]; then
            export $ENV=${(P)ENV}:$DIR
        else
            export $ENV=$DIR
        fi
    fi
}
